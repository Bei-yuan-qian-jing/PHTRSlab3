<h1 align="center">Public Works Department Repair System</h1>
<% if flash[:login_error] %>
  <p align="center"><%= flash[:login_error] %></p>
<% end %>
 
<%= form_for :session, url: :sessions_create do |f| %>
 
  <p align="center">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>
 
  <p align="center">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </p>
 
  <p align="center"><%= f.button "login" %></p>
 
<% end %>